<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD Sql Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>
<sqlMap namespace="checkInfo">

	<typeAlias alias="userDto" type="login.user.bean.UserInfoDataBean" />
	
	<select id="validCheck" resultClass="userDto" parameterClass="userDto">
		SELECT  id, pw from userInfo WHERE id = #id#;
	</select>
	
	<!-- 아이디 체크 -->
	<select id="validIDCheck" resultClass="int" parameterClass="String">
		SELECT  count(*) from userInfo WHERE id = #id#;
	</select>
	
	<select id="SearchId" parameterClass="userDto" resultClass="String">
		select id from userInfo where name=#name# and email=#email# and #phone#;
	</select>
	
	<select id="SearchPw" parameterClass="userDto" resultClass="String">
		select pw from userInfo where id=#id# and name=#name# and #phone#;
	</select>
</sqlMap>